<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Erin's Friendly Ferrets</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideSmall"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_Ferret</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideSmall"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_Ferret</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
