<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anima Animals - Community Pack</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideHuge"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_AnimaMuffalo</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideHuge"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_AnimaMuffalo</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideTiny"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_AnimaFox</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef [defName = "DankPyon_TreatAnyHideTiny"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>DankPyon_Hide_AnimaFox</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
